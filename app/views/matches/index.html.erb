<h1>Listing matches</h1>
 
<%= link_to 'New match', new_match_path %>

<table>
  <tr>
    <th>Visitor</th>
    <th>Score</th>
    <th>Home</th>
    <th>Date</th>
  </tr>
 
  <% @matches.each do |match| %>
    <tr>
      <td><%= match.visitor %></td>
      <td><%= match.score %></td>
      <td><%= match.home %></td>
      <td><%= match.event_time %></td>
      <td><%= link_to 'Show', match_path(match) %></td>
      <td><%= link_to 'Edit', edit_match_path(match) %></td>
      <td><%= link_to 'Destroy', match_path(match),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
